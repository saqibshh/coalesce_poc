{# == Node Type Version        : 1  == #}
{# == Node Type Name           : Dynamic Stage from External == #}
{# == Node Type Description    : Creates dynamic stage table from external table with schema inference based on filtered date data == #}
{#Release date:20250109 Version:1.0.0#}

{# Storage Location-database and schema #}
{% set srcSchName = node.location.name %}
{% set db = storageLocations | selectattr('name', 'equalto', srcSchName) | map(attribute='database') | first %}
{% set sch = storageLocations | selectattr('name', 'equalto', srcSchName) | map(attribute='schema') | first %}

{# Use upstream source (external table) #}
{% set sourceDb = sources[0].location.database %}
{% set sourceSch = sources[0].location.schema %}
{% set sourceTable = sources[0].name %}

{# Create initial placeholder table - will be replaced during run #}
{{ stage('Create Initial Placeholder Table') }}

{% if config.materializationType == 'transient table' %}
    CREATE OR REPLACE TRANSIENT TABLE "{{ db }}"."{{ sch }}"."{{ node.name }}" (
{% else %}
    CREATE OR REPLACE TABLE "{{ db }}"."{{ sch }}"."{{ node.name }}" (
{% endif %}

-- Placeholder columns - will be replaced during run with dynamically inferred schema
placeholder_column STRING COMMENT 'This table will be dynamically recreated with proper schema during run',

-- System columns that will be preserved
{% for col in columns %}
    {% if col.sysLoadTs %}
        "LOAD_TIMESTAMP" TIMESTAMP_NTZ COMMENT 'Timestamp when data was loaded',
    {% elif col.sysSourceFilename %}
        "SOURCE_FILENAME" STRING COMMENT 'Source filename from external table',
    {% elif col.sysSourceRowNumber %}
        "SOURCE_ROW_NUMBER" NUMBER COMMENT 'Row number from source file',
    {% elif col.sysProcessDate %}
        "PROCESS_DATE" DATE COMMENT 'Date being processed from variable table'
    {% endif %}
    {% if not loop.last and (col.sysLoadTs or col.sysSourceFilename or col.sysSourceRowNumber or col.sysProcessDate) %},{% endif %}
{% endfor %}

) COMMENT = 'Dynamic stage table created from external table {{ sourceDb }}.{{ sourceSch }}.{{ sourceTable }} with schema inference based on date filtering';
