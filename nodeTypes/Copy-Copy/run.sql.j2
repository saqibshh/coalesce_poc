{% for test in node.tests if config.testsEnabled %}
    {% if test.runOrder == 'Before' %}
        {{ test_stage(test.name, test.continueOnFailure) }}
        {{ test.templateString }}
    {% endif %}
{% endfor %}

{% if node.materializationType == 'table' %}
    {% if config.preSQL %}
        {{ stage('Pre-SQL') }}
        {{ config.preSQL }}
    {% endif %}

    {{ stage('Dynamic COPY Configuration') }}
    {% if config.controlTableName %}
        -- Read configuration from control table
        {% set control_table = config.controlTableSchema + '.' + config.controlTableName if config.controlTableSchema else config.controlTableName %}
        {% set stage_name_query = "SELECT stage_name FROM " + control_table + " WHERE table_name = '" + node.name + "' AND is_active = true" %}
        {% set external_uri_query = "SELECT external_uri FROM " + control_table + " WHERE table_name = '" + node.name + "' AND is_active = true" %}
        {% set subfolder_query = "SELECT subfolder FROM " + control_table + " WHERE table_name = '" + node.name + "' AND is_active = true" %}
    {% else %}
        -- Use static configuration values
        {% set stage_name_query = "'" + config.stageName + "'" %}
        {% set external_uri_query = "'" + config.externalURI + "'" %}
        {% set subfolder_query = "'" + config.subfolder + "'" if config.subfolder else "NULL" %}
    {% endif %}

    {{ stage('COPY INTO ' + node.name) }}
    COPY INTO {{ ref_no_link(node.location.name, node.name) }}
    FROM (
        SELECT 
            $1::VARIANT AS SRC,
            current_timestamp()::timestamp_ntz AS LOAD_TIMESTAMP,
            METADATA$FILENAME AS FILENAME,
            METADATA$FILE_ROW_NUMBER AS FILE_ROW_NUMBER,
            METADATA$FILE_LAST_MODIFIED AS FILE_LAST_MODIFIED,
            METADATA$START_SCAN_TIME AS SCAN_TIME
        FROM @{{ stage_name_query }} 
        {% if config.subfolder %}
            /{{ subfolder_query }}
        {% endif %}
    )
    FILE_FORMAT = (
        TYPE = '{{ config.fileType }}'
        {% if config.fieldDelim %}
            FIELD_DELIMITER = '{{ config.fieldDelim }}'
        {% endif %}
        {% if config.skipHeader %}
            SKIP_HEADER = {{ config.skipHeader }}
        {% endif %}
    )
    PATTERN = '{{ config.filePattern }}' {% if config.filePattern %}
    {% else %}
    PATTERN = '.*'
    {% endif %}

    {% if config.postSQL %}
        {{ stage('Post-SQL') }}
        {{ config.postSQL }}
    {% endif %}
{% endif %}

{% if config.testsEnabled %}
    {% for test in node.tests %}
        {% if test.runOrder == 'After' %}
            {{ test_stage(test.name, test.continueOnFailure) }}
            {{ test.templateString }}
        {% endif %}
    {% endfor %}

    {% for column in columns %}
        {% for test in column.tests %}
            {{ test_stage(column.name + ": " + test.name) }}
            {{ test.templateString }}
        {% endfor %}
    {% endfor %}
{% endif %}
